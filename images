--Image keycloak:

docker pull jboss/keycloak

-- expose on localhost

docker run --net projectdw2019_mongo_net  -p 8080:8080 -e DB_ADDR=192.168.1.2 -e DB_PORT=3306 -e DB_DATABASE=keycloak -e DB_USER=root -e DB_PASSWORD=secret -e KEYCLOAK_USER=admin -e KEYCLOAK_PASSWORD=123 -v /tmp:/tmp jboss/keycloak


--Create user on an already running container

docker exec <container_id> keycloak/bin/add-user-keycloak.sh -u <username> -p <password>
docker exec 144 keycloak/bin/add-user-keycloak.sh -u jjolon -p 123

--then restarting the contrainer

docker restart <container_id>


-conection mysql:

docker run --name mysql -d --net projectdw2019_mongo_net -e MYSQL_DATABASE=keycloak -e MYSQL_USER=root -e MYSQL_PASSWORD=secret -e MYSQL_ROOT_PASSWORD=root_password mysql
